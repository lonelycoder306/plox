class Error
{
    init(message, halt = true, code = nil)
    {
        if(type(message) != "<string>")
        {
            perror("Exception error: Error constructor only accepts a string message.");
            return;
        }

        if (code != nil and type(code) != "<string>")
        {
            perror("Exception error: Error constructor only accepts a string code.");
            return;
        }
        
        safe this.message = message;
        safe this.code = code;
        safe this.halt = halt;
    }

    show()
    {
        if (this.code != nil)
            perror(this.code + ": " + this.message);
        else
            perror(this.message);
    }
}